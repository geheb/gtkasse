{
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.AspNetCore.Identity": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "path": ".logs/log-.txt",
                                "rollingInterval": "Day",
                                "rollOnFileSizeLimit": true
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    "ConnectionStrings": {
        "MySql": "",
        "SQLite": ""
    },
    "DataProtection": {
        "PfxFile": "./dataprotection.pfx",
        "PfxPassword": null
    },
    "App": {
        "HeaderTitle": "Kanu Club",
        "Slogan": "Die Web-App hilft bei der Abrechnung.",
        "InvoiceSender": [
            "GT Kasse"
        ]
    },
    "Bootstrap": {
        "SuperUser": {
            "Name": "Super Admin",
            "Email": "",
            "Password": ""
        }
    },
    "ApiKey": "",
    "Smtp": {
        "Server": "localhost",
        "Port": 25,
        "LoginName": "",
        "LoginPassword": "",
        "SenderName": "GT Kasse",
        "SenderEmail": "no-reply@localhost"
    },
    "AllowedHosts": "*"
}
